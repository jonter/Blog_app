<% include ../partials/header %>

<div class="ui main text container segment ">
        <div class="ui huge header"> Edit: <%= post.title %> </div>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" class="ui form ">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= post.title %>" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value="<%= post.image %>" required>
            </div>
            <div class="field">
                <label> Post Body </label>
                <textarea name="blog[body]" cols="30" rows="10"  required> <%= post.body %> </textarea>
            </div>
            
            <input class="ui violet big basic button" type="submit">
        
        </form>
    </div>

<% include ../partials/footer %>
